<% if feature?(:twitter_login) || feature?(:facebook_login) || feature?(:google_login) %>

  <% if current_page?(new_user_session_path) %>

  <div class="small-12 medium-12 large-4 column pad-r-0">
    <div class="login-box-left">
      <h2><%= t("devise_views.mailer.confirmation_instructions.title") %></h2>
      <p><%= t("devise_views.shared.links.signin_with_provider") %></p>
      <ul>
        <% if feature? :google_login %>
        <li>
          <%= link_to image_tag("gmail-icon.png", border: 0), user_google_oauth2_omniauth_authorize_path , class: "social-sign-in-icons"  %>
        </li>
        <% end %>
        <li>
          <% if feature? :twitter_login %>
          <%= link_to image_tag("twitter-icon.png", border: 0), user_twitter_omniauth_authorize_path , class: "social-sign-in-icons"  %>
          <% end %>
        </li>
        <li>
          <% if feature? :facebook_login %>
          <%= link_to image_tag("fb-icon.png", border: 0), user_facebook_omniauth_authorize_path , class: "social-sign-in-icons"  %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
    

  <% elsif current_page?(new_user_registration_path) %>
    <div class="row">
      <div class="small-12 column">
        <div class="margin-bottom text-center">
          <strong><%= t("omniauth.info_sign_up") %></strong>
        </div>
      </div>

      <div class="row">
      <div class="small-12 column text-center social-icons-container">
      <% if feature? :twitter_login %>
          <%= link_to image_tag("twitter-icon.png", border: 0), user_twitter_omniauth_authorize_path,
                      title: t("omniauth.twitter.sign_up"),
                      class: "social-sign-in-icons" %>
      <% end %>

      <% if feature? :facebook_login %>
          <%= link_to image_tag("fb-icon.png", border: 0), user_facebook_omniauth_authorize_path,
                      title: t("omniauth.facebook.sign_up"),
                      class: "social-sign-in-icons" %>
      <% end %>

      <% if feature? :google_login %>
          <%= link_to image_tag("gmail-icon.png", border: 0), user_google_oauth2_omniauth_authorize_path,
                      title: t("omniauth.google_oauth2.sign_up"),
                      class: "social-sign-in-icons" %>
      <% end %>
      </div>
      </div>
      <div class="small-12 column auth-divider">
        <span><%= t("omniauth.or_fill") %></span>
      </div>
    </div>
  <% end %>

<% end %>

<% provide :title do %><%= t("customtext.sitemessages.main_title") %><% end %>
<div class="login-sec contactus-page">
      <div class="row">
        <div class="small-12 medium-12 large-4 column pad-r-0">
          <div class="login-box-left">
            <p><%= t("customtext.sitemessages.tagline") %></p>
            <p><%= t("customtext.sitemessages.connect_with") %>:</p>
            <ul>
              <% if feature? :google_login %>
              <li>
                <%= link_to image_tag("gmail-icon.png", border: 0), "https://www.youtube.com/#{setting["youtube_handle"]}" , class: "  social-sign-in-icons"  %>
              </li>
              <% end %>
              <li>
                <% if feature? :twitter_login %>
                <%= link_to image_tag("twitter-icon.png", border: 0), "https://twitter.com/#{setting["twitter_handle"]}" , class: "  social-sign-in-icons"  %>
                <% end %>
              </li>
              <li>
                <% if feature? :facebook_login %>
                <%= link_to image_tag("fb-icon.png", border: 0), "https://www.facebook.com/#{setting["facebook_handle"]}" , class: "  social-sign-in-icons"  %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
        <div class="small-12 medium-12 large-8 column pad-l-0">
          <div class="login-box-right">
            <div class="row">
              <div class="small-12 medium-10 medium-offset-1 column">
                <h2><%= t("customtext.sitemessages.main_title") %></h2>
                <h5><%= t("customtext.sitemessages.subtitle") %></h5>
                <hr class="footer-devider">
                <%= form_for @sitemessage, url: {action: "create"}, html: {class: "contactus_form"} do |f| -%>
                  <div class="row"> 
                      <div class="small-12 medium-12 column">
                          <p class="sm-txt">*<%= t("customtext.common_forms.mandatory_form") %></p>
                      </div>
                    <div class="small-12 medium-12 column constyle-form-input">
                        <label for="user_login"><%= t("customtext.sitemessages.label_name") %><span>*</span></label>
                      <%= f.text_field :name, autofocus: true, label: false  %>
                    </div>
                    <div class="small-12 medium-12 column constyle-form-input">
                      <label for="user_password"><%= t("customtext.sitemessages.label_email") %><span>*</span></label>
                      <%= f.email_field :email, label: false  %>
                    </div>
                      <div class="small-12 medium-12 column constyle-form-input">
                        <%= f.label :message do %>
                          <%= t("customtext.sitemessages.label_message") %><span>*</span>
                        <%- end -%>
                      <%= f.text_area :message, :rows => 3, label: false %>
                    </div>
                    <div class="small-12 medium-5 small-centered constyle-form-submit">
                      <%= f.submit(t("devise_views.sessions.new.submit"), class: "button expanded") %>
                    </div>
                  </div>
                <% end -%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
<style type="text/css">
header { margin-bottom: 0; }
</style>